pipeline {
    agent any
   
    stages {
        stage("Git Clone") {
            steps {
                script {
                    git branch: 'GestionInvoice',
                        url: 'https://github.com/NajlaNsiri/DEVOPS1.git'
                }
            }
        }

        stage('Nettoyage du projet') {
            steps {
                script {
                    dir('DEVOPS1/DevOps_Project/')
                    {sh 'mvn clean'}
                }
            }
        }

        stage('Cr√©ation du livrable') {
            steps {
                script {
                    dir('DEVOPS1/DevOps_Project/')
                    {sh 'mvn package -DskipTests=true'}
                }
            }
        }
        
    }
    
}
